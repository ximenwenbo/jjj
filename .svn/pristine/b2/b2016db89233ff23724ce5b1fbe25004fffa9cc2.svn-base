{include file='pub/head' /}
	<title>品优购秒杀-正品秒杀！</title>
	<link rel="stylesheet" type="text/css" href="{:config('home_css')}pages-seckill-index.css" />

	<div class="py-container index">
		<!--banner-->
		<div class="banner">
			<img src="{:config('home_img')}_/banner.png" class="img-responsive" alt="">
		</div>
		<!--秒杀时间-->
		<div class="sectime">
			<div class="item-time active">
				<div class="time-clock">12:00</div>
				<div class="time-state-on">
					<span class="on-text">快抢中</span>
					<span class="on-over">距离结束：01:02:34</span>
				</div>
			</div>
			<div class="item-time">
				<div class="time-clock">14:00</div>
				<div class="time-state-will">
					<span>即将开始</span>
				</div>
			</div>
			<div class="item-time">
				<div class="time-clock">16:00</div>
				<div class="time-state-will">
					<span>即将开始</span>
				</div>
			</div>
			<div class="item-time">
				<div class="time-clock">18:00</div>
				<div class="time-state-will">
					<span>即将开始</span>
				</div>
			</div>
			<div class="item-time">
				<div class="time-clock">20:00</div>
				<div class="time-state-will">
					<span>即将开始</span>
				</div>
			</div>
		</div>
		<!--商品列表-->
		<div class="goods-list">
			<ul class="seckill" id="seckill">
				{volist name='goodsinfos' id='v'}
				<li class="seckill-item">
					<div class="pic">
						<a href="{:url('goods/detail',['goods_id'=>$v.goods_id])}" target="_blank">
							<img src="{:substr($v.goods_logo,1)}" alt=''></a>
					</div>
					<div class="intro"><span>{$v.goods_name}</span></div>
					<div class='price'><b class='sec-price'>￥{$v.goods_price_seckill}</b>
						<b class='ever-price'>￥{$v.goods_price}</b></div>
					<div class='num'>
						<div>已售87%</div>
						<div class='progress'>
							<div class='sui-progress progress-danger'>
								<span style='width: 70%;' class='bar'></span></div>
						</div>
						<div>剩余<b class='owned'>{$v.second_num}</b>件</div>
					</div>
					<a class='sui-btn btn-block btn-buy'
					   href="{:url('qiang',['goods_id'=>$v.goods_id])}"
					   target='_blank'>立即抢购</a>
				</li>
				{/volist}
			</ul>
		</div>
		<div class="cd-top">
			<div class="top">
				<img src="{:config('home_img')}_/gotop.png" />
				<b>TOP</b>
			</div>
			<div class="code" id="code">
				<span><img src="{:config('home_img')}_/code.png"/></span>
			</div>
			<div class="erweima">
				<img src="{:config('home_img')}_/erweima.jpg" alt="">
				<s></s>
			</div>
		</div>
	</div>

	<!--回到顶部-->

	<!-- 底部栏位 -->
	{include file='pub/foot' /}

<script type="text/javascript" src="{:config('home_js')}pages/seckill-index.js"></script>
<script>
	   $(function(){
		   $("#code").hover(function(){
			   $(".erweima").show();
		   },function(){
			   $(".erweima").hide();
		   });
	   })
	</script>
</body>

</html>